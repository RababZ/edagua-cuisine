<div class="navbar navbar-expand-sm navbar-light navbar-edaga-white fixed-top">

  <%= link_to root_path, class: "navbar-brand navbar-logo" do %>
    <%= image_tag "edagua-green.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Recipes", recipes_path, class: "nav-link" %>
      </li>
    </ul>
    <% if user_signed_in? %>
      <div class="nav-item dropdown">
        <%= link_to "Add recipe", new_recipe_path, class: "button button-primary" %>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <%= current_user.email %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My profile", profile_path, class: "dropdown-item" %>
          <%= link_to "My recipes", my_recipes_path , class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
      <% else %>
        <div class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link link-text-color" %>
        </div>
        <div class="nav-item">
          <%= link_to "Sign up",  new_user_registration_path, class: "button button-primary" %>
        </div>
    <% end %>
  </div>
</div>
