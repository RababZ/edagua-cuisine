<div class="container-edaga">
  <div class="form-profile">
    <% if @user.photo.attached? %>
      <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill, class: " avatar-large" %>
    <% else %>
      <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSd-e9Kn0P1AAKT-EdAiaAVUvBtRVAJqONXIL0pJ402cOAzVi0i", class: "avatar-large" %>
    <% end %>

    <div id="profile-content">
      <h2><%= @user.username %></h2>

      <%= simple_form_for @user, url: profile_path, method: :patch do |f| %>

        <%= f.input :username, label: "Pseudonyme" %>
        <%= f.input :first_name, label: "PrÃ©nom" %>
        <%= f.input :last_name, label: "Nom" %>
        <%#= f.input :country %>
        <%= f.input :email, input_html: { autocomplete: "email" }, label_html: {class: 'pull-left'}, label: "E-mail" %>
        <%= f.input :photo, as: :file, required: false %>

        <%= f.submit "Actualiser", class: "button button-secondary" %>
       <% end %>
    </div>
  </div>
</div>
