<div class="page-banner">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <%= simple_form_for [ @recipe, @review ] do |f| %>
          <%= f.input :rating, collection: (1..5).to_a, label: "Rate this recipe" %>
          <%= f.input :content %>
          <%= f.submit "Send your review" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
