
<%= simple_form_for @recipe do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category, collection: Recipe::CATEGORIES %>
    <%= f.input :description %>
    <%= f.input :active_time %>
    <%= f.input :idle_time %>
    <%= f.input :difficulty %>
    <%= f.input :serving_size %>
    <%= f.input :steps %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class: "button button-secondary" %>
<% end %>
  </div>
