<%= simple_form_for @recipe do |f| %>
  <div class="form-inputs">
    <div class="summary-form">

      <!-- <h4>Summary information:</h4> -->
      <%= f.input :name, label: "Nom de la recette" %>
      <%= f.input :category, collection: Recipe::CATEGORIES, label: "Cat√©gorie" %>
      <%= f.input :description %>
      <div class="row" style="margin: auto">
        <div class="col-md-6" style="padding-left: 0">
          <%= f.input :active_time, label: "Temps de pr√©paration" %>
        </div>
         <div class="col-md-6" style="padding-left: 0">
          <%= f.input :idle_time, label: "Temps de repos" %>
        </div>
      </div>
      <%= f.input :difficulty, collection: %w(Facile Moyen Difficile),label: "Difficult√©" %>
      <%= f.input :serving_size, label: "Nombre de personnes" %>
      <%= f.input :photo, as: :file, input_html: { class: 'd-none', id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: 'Joindre une photo üìé' %>
      <%= image_tag "", width: 300, class: "d-none", id: "photo-preview" %>
    </div>
    <!-- The form for nested model: ingredient -->
    <div class="ingredients-form">
      <h4>Ingr√©dients:</h4>
      <%= f.simple_fields_for :ingredients do |ingredient| %>
        <%= render 'ingredient_fields', f: ingredient %>
      <% end %>
      <div class="links">
        <%= link_to_add_association button_tag('+', type: "button", class: "add"), f, :ingredients %>
        <%= link_to_add_association 'Ajouter un ingr√©dient', f, :ingredients %>
      </div>
    </div>

    <!-- The form for nested model: step -->
    <div class="steps-form">
      <h4>√âtapes de pr√©paration:</h4>
      <%= f.simple_fields_for :steps do |step| %>
        <%= render 'step_fields', f: step %>
      <% end %>
      <div class="links">
        <%= link_to_add_association button_tag('+', type: "button", class: "add"), f, :steps %>
        <%= link_to_add_association 'Ajouter une √©tape', f, :steps %>
      </div>
    </div>

    <%= f.submit "Soumettre la recette", class: "button button-secondary" %>
  </div>
<% end %>

