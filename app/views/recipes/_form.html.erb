
<%= simple_form_for @recipe do |f| %>
  <div class="form-inputs">
    <h4>Summary information:</h4>
    <%= f.input :name %>
    <%= f.input :category, collection: Recipe::CATEGORIES %>
    <%= f.input :description %>
    <%= f.input :active_time %>
    <%= f.input :idle_time %>
    <%= f.input :difficulty %>
    <%= f.input :serving_size %>
    <h4>Steps:</h4>
    <%= f.input :steps %>
    <!-- The form for nested model: ingredient -->
    <h4>Ingredients:</h4>
    <%= f.simple_fields_for :ingredients do |ingredient| %>
      <%= render 'ingredient_fields', f: ingredient %>
    <% end %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class: "button button-secondary" %>
  </div>
<% end %>

