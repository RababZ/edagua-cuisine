<div class="wrapper">
  <div class="container-edaga">
    <!-- Nav tabs -->
    <ul class="list-inline tabs-underlined nav" role="tablist">
      <li>
        <a class="tab-underlined active" id="all-tab" data-toggle="tab" href="#all" role="tab" aria-controls="all" aria-selected="true">All</a>
      </li>
      <li>
        <a class="tab-underlined" id="dish-tab" data-toggle="tab" href="#dish" role="tab" aria-controls="dish" aria-selected="true">Dish</a>
      </li>
      <li>
        <a class="tab-underlined" id="dessert-tab" data-toggle="tab" href="#dessert" role="tab" aria-controls="dessert" aria-selected="true">Dessert</a>
      </li>
      <li>
        <a class="tab-underlined" id="drink-tab" data-toggle="tab" href="#drink" role="tab" aria-controls="drink" aria-selected="true">Drink</a>
      </li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane active" id="all" role="tabpanel" aria-labelledby="all-tab">
        <div class="row">
          <% @recipes.each do |recipe| %>
            <%= render "recipe_card", recipe: recipe %>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="dish" role="tabpanel" aria-labelledby="dish-tab">
        <div class="row">
          <% @recipes.where(category: "Dish", user: current_user).each do |recipe| %>
            <%= render "recipe_card", recipe: recipe %>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="dessert" role="tabpanel" aria-labelledby="dessert-tab">
        <div class="row">
          <% @recipes.where(category: "Dessert").each do |recipe| %>
            <%= render "recipe_card", recipe: recipe %>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="drink" role="tabpanel" aria-labelledby="drink-tab">
        <div class="row">
          <% @recipes.where(category: "Drink").each do |recipe| %>
            <%= render "recipe_card", recipe: recipe %>
          <% end %>
        </div>
      </div>
    </div>
